@{
    ViewBag.Title = "Diagramas";
}
}

@section jsIndex{
    @Scripts.Render("~/Scripts/go.js")
    @Scripts.Render("~/Scripts/go-script.js")
}

@section cards {
    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
    </div>
}

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0 text-uppercase">Diagramas</h3>
            </div>
            <div class="card-footer py-4">
                <div id="diagramaGoJS" style="border: solid 1px black; width:100%; height:500px"></div>
            </div>
            <div class="card-footer py-4">
                <table class="table" style="width: 100%" border="1">
                    @{

                        foreach (var item in Model)
                        {
                        <tr>
                            @for (int i = 0; i < Model.Count; i++)
                            {

                                if ((item.tarefa_id == null && i == 0) || (item.tarefa_id != null && item.tarefa_id - i == 0))
                                {
                                    <td>@item.nome</td>
                                }
                                else
                                {
                                    <td></td>
                                }
                            }
                        </tr>
                        }
                    }
                </table>
            </div>
        </div>
    </div>
</div>