@{
    ViewBag.Title = "Página Inicial";
    var lstNumeroRegistros = ViewData.Model;
    var nomeUsuario = @Session["usuario"].ToString();
}

@section jsIndex{
    @Scripts.Render("~/Scripts/go.js")
    @Scripts.Render("~/Scripts/go-script.js")
}

@section cards {
    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
        <div class="container-fluid">
            <div class="header-body">
                <!-- Card stats -->
                <div class="row">
                    <div class="col-xl-4 col-lg-6">
                        <div class="card card-stats mb-4 mb-xl-0">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <h5 class="card-title text-uppercase text-muted mb-0">Nº Usuários</h5>
                                        <span class="h2 font-weight-bold mb-0">@lstNumeroRegistros[0]</span>
                                    </div>
                                    <div class="col-auto">
                                        <div class="icon icon-shape bg-danger text-white rounded-circle shadow">
                                            <i class="fa fa-users"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 col-lg-6">
                        <div class="card card-stats mb-4 mb-xl-0">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <h5 class="card-title text-uppercase text-muted mb-0">Nº Categorias</h5>
                                        <span class="h2 font-weight-bold mb-0">@lstNumeroRegistros[1]</span>
                                    </div>
                                    <div class="col-auto">
                                        <div class="icon icon-shape bg-default text-white rounded-circle shadow">
                                            <i class="fa fa-list-ol"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 col-lg-6">
                        <div class="card card-stats mb-4 mb-xl-0">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <h5 class="card-title text-uppercase text-muted mb-0">Nº Tarefas</h5>
                                        <span class="h2 font-weight-bold mb-0">@lstNumeroRegistros[2]</span>
                                    </div>
                                    <div class="col-auto">
                                        <div class="icon icon-shape bg-info text-white rounded-circle shadow">
                                            <i class="fa fa-tasks"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h2 class="mb-0 text-uppercase text-center">Bem vindo, @nomeUsuario</h2>
            </div>
            <div class="card-header border-0">
                <h3 class="mb-0 text-uppercase">Diagrama de Tarefas</h3>
            </div>
            <div class="card-footer py-4">
                <div id="diagramaGoJS" style="border: solid 1px black; width:100%; height:500px"></div>
            </div>
        </div>
    </div>
</div>